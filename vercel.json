{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/public/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "/images/$1"
        },
        {
            "src": "/videos/(.*)",
            "dest": "/videos/$1"
        },
        {
            "src": "/scripts/(.*)",
            "dest": "/public/javascript/$1"
        },
        {
            "src": "/(.*)",
            "dest": "app.js"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
} 